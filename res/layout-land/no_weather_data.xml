<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_weather_data_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/no_weather_data_layout_padding_start_top_end"
    android:paddingTop="@dimen/no_weather_data_layout_padding_start_top_end"
    android:paddingEnd="@dimen/no_weather_data_layout_padding_start_top_end"
    android:paddingBottom="@dimen/no_weather_data_layout_landscape_padding_bottom">

    <ImageView
        android:id="@+id/no_weather_data_image"
        android:layout_width="@dimen/no_weather_data_image_size"
        android:layout_height="@dimen/no_weather_data_image_size"
        android:layout_marginStart="@dimen/no_weather_data_image_landscape_margin_start"
        android:layout_marginEnd="@dimen/no_weather_data_image_landscape_margin_end"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_no_weather_data"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/no_weather_data_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_weather_data_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_weather_data_header"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_weather_data_scroll_view_landscape_margin_top"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="@dimen/no_weather_data_fading_edge_landscape_length"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarDefaultDelayBeforeFade="1500"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/no_weather_data_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_weather_data_title1"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/no_weather_data_summary1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_weather_data_summary1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/no_weather_data_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/no_weather_data_text_margin_top"
                    android:text="@string/no_weather_data_title2"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/no_weather_data_summary2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_weather_data_summary2"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
