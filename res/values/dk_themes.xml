<resources>

    <!-- Day/night (all) themes -->

    <!-- App themes -->

    <!-- Base app theme -->
    <style name="BaseTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <!-- App splash theme -->
    <style name="AppSplashTheme" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!-- App theme -->
    <style name="AppTheme" parent="@style/BaseTheme">
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="dividerColor">@color/divider_color</item>
        <item name="toolbarUpdateButtonIconTint">@color/toolbar_icon_tint</item>
        <item name="toolbarRippleColor">@color/ripple_color</item>
    </style>
    <!-- App themes end -->

    <!-- App settings themes -->

    <!-- Base app settings theme -->
    <style name="BaseAppSettingsTheme" parent="@*android:style/Theme.Material.Settings.NoActionBar">
        <item name="android:colorPrimary">@color/theme_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <!-- App Settings splash theme -->
    <style name="AppSettingsSplashTheme" parent="@style/BaseAppSettingsTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!-- App Settings theme -->
    <style name="AppSettingsTheme" parent="@style/BaseAppSettingsTheme" />
    <!-- App settings themes end -->

    <!-- Settings theme,
         (when launched via Android settings app) -->

    <!-- Base settings theme -->
    <style name="BaseSettingsTheme" parent="@*android:style/Theme.Material.Settings.NoActionBar" />

    <!-- Settings splash theme -->
    <style name="SettingsSplashTheme" parent="@style/BaseSettingsTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!-- Settings theme -->
    <style name="SettingsTheme" parent="@style/BaseSettingsTheme" />
    <!-- Settings themes end -->
</resources>
